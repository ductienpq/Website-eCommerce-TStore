	<config>
	  <fields name="params">
	    <fieldset name="basic" label="Jigsaw Puzzle Parameters" description="MyPuzzle Jigsaw Settings">
		    <field name="size" type="text" default="300" label="Puzzle Size in px">
			</field>
		    <field name="pieces" type="list" default="3" label="Pieces count">
                            <option value="3">3x3 - 9 pieces</option>
                            <option value="4">4x4 - 16 pieces</option>
                            <option value="5">5x5 - 25 pieces</option>
                            <option value="6">6x6 - 36 pieces</option>
                            <option value="7">7x7 - 49 pieces</option>
                            <option value="8">8x8 - 64 pieces</option>
                            <option value="9">9x9 - 81 pieces</option>
                            <option value="10">10x10 - 100 pieces</option>
                    </field>
                    <field name="rotation" type="checkbox" value="1" label="Enable Rotation"></field>
                    <field name="preview" type="checkbox" value="1" label="Show Preview"></field>
                    <field name="bgcolor" type="color" default="#FFFFFF" label="Background Color"></field>
                    <field name="myimage" type="text" default="" size="60" label="Start image Path/Url">
                    </field>
                    <field name="gallery" type="text" default="modules/mod_mp_jigsaw/gallery" size="60" label="Image gallery Path">
                    </field>
                    <field name="doresize" type="checkbox" value="1" label="Resize Images"></field>
                    <field name="resizefolder" type="text" default="images" size="60" label="Image resize folder">
                    </field>
	    </fieldset>
	  </fields>
	</config>
</extension>