	</description>
        <files>
            <filename module="mod_TaoQuangCao2Ben">mod_TaoQuangCao2Ben.php</filename>
			<filename>index.html</filename>
			<filename>logo.png</filename>
			<filename>mod_TaoQuangCao2Ben.js</filename>
        </files>
		<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.mod_TaoQuangCao2Ben.ini</language>
			<language tag="vi-VN">vi-VN/vi-VN.mod_TaoQuangCao2Ben.ini</language>
		</languages>
   	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="spacer1" type="spacer"  width="300" label="========== Cài đặt chung ========== " description="" />
				
				<field name="maincontentw" type="text" default="1000" label="MOD_TAO_QC_PAGE_WIDTH_LABEL" description="MOD_TAO_QC_PAGE_WIDTH_DESC" />
				<field name="topadjust" type="text" default="10" label="MOD_TAO_QC_MARGIN_TOP_LABEL" description="MOD_TAO_QC_MARGIN_TOP_DESC" />
				<field name="fspeed" type="text" default="20" label="MOD_TAO_QC_SPEED_LABEL" description="MOD_TAO_QC_SPEED_DESC" />

				<field name="spacer2" type="spacer"  width="300" label="========== Banner bên trái ========== " description="" />
				
				
				<field name="leftboxw" type="text" default="100" label="MOD_TAO_QC_LEFT_BOX_WIDTH_LABEL" description="MOD_TAO_QC_LEFT_BOX_WIDTH_DESC" />
				<field name="leftadjust" type="text" default="5" label="MOD_TAO_QC_LEFT_BOX_MARGIN_LABEL" description="MOD_TAO_QC_LEFT_BOX_MARGIN_DESC" />
				<field type="spacer" label="&lt;br &#47;&gt;" />
				
				<field name="left_position" type="editor" width="300" filter="safehtml" default="Đưa hình ảnh , banner hoặc text vào" label="MOD_TAO_QC_LEFT_BOX_POSITION_LABEL" description="MOD_TAO_QC_LEFT_BOX_POSITION_DESC" />
				
				<field name="spacer3" type="spacer"  width="300px" label="========== Banner bên phải ========== " description="" />
				
				<field name="rightboxw" type="text" default="100" label="MOD_TAO_QC_RIGHT_BOX_WIDTH_LABEL" description="MOD_TAO_QC_RIGHT_BOX_WIDTH_DESC" />
				<field name="rightadjust" type="text" default="5" label="MOD_TAO_QC_RIGHT_BOX_MARGIN_LABEL" description="MOD_TAO_QC_RIGHT_BOX_MARGIN_DESC" />
				<field type="spacer" label="&lt;br &#47;&gt;" />
				<field name="right_position" type="editor" width="300" filter="safehtml" default="Đưa hình ảnh , banner hoặc text vào" label="MOD_TAO_QC_RIGHT_BOX_POSITION_LABEL" description="MOD_TAO_QC_RIGHT_BOX_POSITION_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode"	type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>